<style>
  .field,.actions{
        margin-left: auto;
        margin-right: auto;
        width: 12em;
  }
  h2{
    text-align: center
  }
</style>

<%= form_with model: article do |form| %>

  <div class="field">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
  </div>

  <div class="field">
    <%= form.label :Cover_Picture %><br>
    <%= form.file_field :image %><br>
  </div>
  <br>

  <div class="field">
    <%= form.submit "Save", :class=>'btn btn-success'%>
  </div>

<% end %>
