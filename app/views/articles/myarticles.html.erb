<style>
	h1,.submit{
		text-align: center;
	}
</style>
<h1>My Articles</h1>
<div class="submit">
<% @articles.each do |article| %>
    <% if article.user_id==current_user.id %>
        <%= image_tag(article.image)%>
        <figcaption><%= link_to article.title, article ,:class=>'btn btn-outline-primary'%></figcaption>
        <%= article.likes.count %> <%= (article.likes.count) == 1 ? 'Like' : 'Likes'%><br>
        <br>
    <% end %>
<% end %>
</div>

