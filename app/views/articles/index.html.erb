<style>
	h1,.submit{
		text-align: center;
	}
</style>

<h1>Articles</h1>

<%#= button_to 'Like', article_likes_path(@post), method: :article %>

<div class="submit" >
	<% @articles.each do |article| %>
	<%= image_tag(article.image)%>
	<figcaption><%= link_to article.title, article ,:class=>'btn btn-outline-primary'%></figcaption>
	<p><%= article.likes.count %> <%= (article.likes.count) == 1 ? 'Like' : 'Likes'%></p><br>
	<% end %>
</div>
</div>

<div class="submit"><%= link_to "New Article", new_article_path , :class=>'btn btn-primary btn-lg'%></div>



